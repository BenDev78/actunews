{% extends 'base.html.twig' %}

{% block title %}
    ActuNews | {{ category.name }}
{% endblock %}


{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ category.name | title}}</h1>
    </div>

    {# -- .py-5.bg-light>.container>.row>.col-md-4.mt-4 -- #}
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for post in category.posts %}
                    <div class="col-md-4 mt-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <img class="img-fluid" src="{{ post.image }}" alt="{{ post.title }}">
                                <h4 class="card-title mt-2">{{ post.title }}</h4>
                                <p class="btn btn-secondary d-block">Lire la suite</p>
                            </div>
                        </div> <!-- /.card -->
                    </div> <!-- /.col-md-4 -->
                {% endfor %}
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div> <!-- /.bg-light -->

{% endblock %}


