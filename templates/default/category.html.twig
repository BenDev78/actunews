{% extends 'base.html.twig' %}

{% block title %}
    ActuNews | {{ category.name }}
{% endblock %}


{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ category.name | title}}</h1>
    </div>

    {# -- .py-5.bg-light>.container>.row>.col-md-4.mt-4 -- #}
    <div class="py-5 bg-light">
        <div class="container">
            <div class="row">
                {% for post in category.posts %}
                    <div class="col-md-4 mt-4">
                        <div class="card text-white bg-primary mb-3">
                            <div class="card-body">
                                <a href="{{ path('default_post', {"category" : post.category.alias, "alias" : post.alias, "id" : post.id}) }}">
                                    <img class="img-fluid" src="{{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}">
                                </a>
                                <h4 class="card-title mt-2">{{ post.title }}</h4>
                                <a href="{{ path('default_post', {"category" : post.category.alias, "alias" : post.alias, "id" : post.id}) }}" class="btn btn-secondary d-block">
                                    Lire la suite
                                </a>
                            </div>
                        </div> <!-- /.card -->
                    </div> <!-- /.col-md-4 -->
                {% else %}
                    <div class="col">
                        <div class="alert alert-dismissible alert-secondary">
                            <button type="button" class="close" data-dismiss="alert">&times;</button>
                            <strong>Information: </strong> Pas d'articles dans cette cat√©gorie pour le moment.
                        </div>
                    </div>
                {% endfor %}
            </div> <!-- /.row -->
        </div> <!-- /.container -->
    </div> <!-- /.bg-light -->

{% endblock %}


