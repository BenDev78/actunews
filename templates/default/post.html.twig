{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ post.title }}</h1>
    </div>

    <div class="py-5 bg-light mt-3">
        <div class="container">
            <div class="jumbotron">
                <div class="row">
                    <div class="col-12">
                        {# read and display several types of flash messages #}
                        {% for label, messages in app.flashes(['success', 'warning']) %}
                            {% for message in messages %}
                                <div class="alert alert-{{ label }}">
                                    {{ message }}
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="
                            {% if post.image%}
                                {{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}
                            {% else %}
                                https://via.placeholder.com/500x350
                            {% endif %}
                        ">
                        <div class="row mt-4">
                            {% if app.user and app.user.id is same as post.user.id or is_granted('ROLE_ADMIN') %}
                                <div class="col-md-6">
                                    <a href="{{ path('post_update', {'id' : post.id}) }}" class="btn btn-block btn-warning">Modifier</a>
                                </div>
                            {% endif %}
                            {% if is_granted('ROLE_ADMIN') %}
                                <div class="col-md-6">
                                    <a href="{{ path('post_delete', {'id' : post.id}) }}"
                                       class="btn btn-block btn-danger"
                                       onclick="return confirm('Voulez-vous vraiment supprimer cet article ? (cette action est irrÃ©versible)')">
                                        supprimer
                                    </a>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                    <div class="col">
                        {{ post.content|raw }}
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

