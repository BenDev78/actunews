{% extends 'base.html.twig' %}

{% block title %}
    {{ post.title }}
{% endblock %}

{% block body %}

    <div class="p-3 mx-auto text-center">
        <h1 class="display-4">{{ post.title }}</h1>
    </div>

    <div class="py-5 bg-light mt-3">
        <div class="container">
            <div class="jumbotron">
                <div class="row">
                    <div class="col">
                        <img class="img-fluid" src="
                            {% if post.image%}
                                {{ asset('uploads/images/' ~ post.image) }}" alt="{{ post.title }}
                            {% else %}
                                https://via.placeholder.com/500x350
                            {% endif %}
                        ">
                    </div>
                    <div class="col">
                        {{ post.content|raw }}
                        <div class="row mt-4">
                            <div class="col-3">
                                <a href="{{ path('post_update', {'id' : post.id}) }}" class="btn btn-warning">Modifier</a>
                            </div>
                            <div class="col-3">
                                <a href="{{ path('post_delete', {'id' : post.id}) }}"
                                   class="btn btn-danger"
                                   onclick="return confirm('Voulez-vous vraiment supprimer cet article ? (cette action est irrÃ©versible)')">
                                    supprimer
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}

